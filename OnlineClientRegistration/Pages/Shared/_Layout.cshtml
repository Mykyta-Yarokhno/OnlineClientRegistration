<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineClientRegistration</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineClientRegistration.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Privacy">Наталія зробить красу</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole(OnlineClientRegistration.Common.Security.AccessRoles.Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Testing/OverallPrint">Список записів</a>
                            </li>
                        }
                        else if(User.IsInRole(OnlineClientRegistration.Common.Security.AccessRoles.Manager))
                        {
                            <li class="nav-item ms-auto">
                                <div class="dropdown">
                                    <a class="nav-link text-dark dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Особистий кабінет
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item" asp-area="" asp-page="/Testing/OverallPrint">Список записів</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Testing/ClientsManagement">Список клієнтів</a>
                                    </div>
                                </div>
                            </li>
                        }
                        else if(User.IsInRole(OnlineClientRegistration.Common.Security.AccessRoles.User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Testing/ClientPrint">Список записів</a>
                            </li>
                            <li class="nav-item ms-auto">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Testing/ClientCenter">Особистий кабінет</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <style>
        .nav-item:hover .nav-link {
            transform: scale(1.1);
            transition: transform 0.3s ease; 
        }
    </style>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>